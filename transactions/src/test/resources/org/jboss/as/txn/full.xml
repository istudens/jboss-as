<subsystem xmlns="urn:jboss:domain:transactions:2.1">
    <core-environment node-identifier="1" path="var" relative-to="jboss.server.data.dir">
        <process-id>
            <socket socket-binding="txn-socket-id" socket-process-id-max-ports="10"/>
        </process-id>
    </core-environment>
    <recovery-environment socket-binding="txn-recovery-environment" status-socket-binding="txn-status-manager"
                          recovery-listener="false"/>
    <coordinator-environment statistics-enabled="true" enable-tsm-status="true"
                             default-timeout="300"/>
    <object-store type="hornetq" path="tx-object-store" relative-to="jboss.server.data.dir"/>
    <jts/>
    <hornetq-store enable-async-io="true"/>
</subsystem>
